{
  "version": 8,
  "cmakeMinimumRequired": {
    "major": 4,
    "minor": 2,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "displayName": "Base Configuration",
      "description": "Common settings for all configurations",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "vcpkg-base",
      "displayName": "vcpkg Base",
      "description": "vcpkg toolchain integration",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": {
          "type": "FILEPATH",
          "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
        },
        "VCPKG_TARGET_TRIPLET": "x64-windows"
      }
    },
    {
      "name": "ninja-base",
      "displayName": "Ninja Base",
      "description": "Ninja generator settings",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build-ninja"
    },
    {
      "name": "msvc-base",
      "displayName": "MSVC Base",
      "description": "Microsoft Visual C++ settings",
      "hidden": true,
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "toolset": {
        "value": "host=x64",
        "strategy": "external"
      }
    },
    {
      "name": "ninja-vcpkg",
      "displayName": "Ninja + vcpkg",
      "description": "Build using Ninja and vcpkg (Modern default)",
      "inherits": [
        "base",
        "vcpkg-base",
        "ninja-base",
        "msvc-base"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "ninja-vcpkg-debug",
      "displayName": "Ninja + vcpkg Debug",
      "description": "Build using Ninja and vcpkg (Debug)",
      "inherits": "ninja-vcpkg",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "vs2022-vcpkg",
      "displayName": "Visual Studio 2022 + vcpkg",
      "description": "Build using Visual Studio 2022 and vcpkg",
      "inherits": [
        "base",
        "vcpkg-base",
        "msvc-base"
      ],
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/build-vs2022"
    },
    {
      "name": "vs2026-vcpkg",
      "displayName": "Visual Studio 2026 + vcpkg",
      "description": "Build using Visual Studio 2026 and vcpkg",
      "inherits": [
        "base",
        "vcpkg-base",
        "msvc-base"
      ],
      "generator": "Visual Studio 18 2026",
      "binaryDir": "${sourceDir}/build-vs2026"
    }
  ],
  "buildPresets": [
    {
      "name": "ninja-release",
      "displayName": "Ninja Release",
      "configurePreset": "ninja-vcpkg",
      "configuration": "Release"
    },
    {
      "name": "ninja-debug",
      "displayName": "Ninja Debug",
      "configurePreset": "ninja-vcpkg-debug",
      "configuration": "Debug"
    },
    {
      "name": "vs2022-release",
      "displayName": "VS 2022 Release",
      "configurePreset": "vs2022-vcpkg",
      "configuration": "Release"
    },
    {
      "name": "vs2022-debug",
      "displayName": "VS 2022 Debug",
      "configurePreset": "vs2022-vcpkg",
      "configuration": "Debug"
    }
  ],
  "workflowPresets": [
    {
      "name": "full-build-ninja",
      "steps": [
        {
          "type": "configure",
          "name": "ninja-vcpkg"
        },
        {
          "type": "build",
          "name": "ninja-release"
        }
      ]
    }
  ]
}